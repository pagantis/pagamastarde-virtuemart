<?xml version="1.0" encoding="UTF-8" ?>
<extension version="2.5" type="plugin" group="vmpayment" method="upgrade">
    <name>Pagamastarde</name>
    <creationDate>November 23 2015</creationDate>
    <author>PagaMasTarde</author>
    <authorUrl>https://www.pagamastarde.com/</authorUrl>
    <copyright>Copyright (C) 2015 Paga+Tarde</copyright>
    <license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
    <version>1.1.1</version>
    <description>Paga+Tarde Plugin</description>
    <install> <!-- Runs on install -->
      	<sql>
          	<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
    		</sql>
      </install>
      <uninstall> <!-- Runs on uninstall -->
      	<sql>
          	<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
    		</sql>
     	</uninstall>
     	<update> <!-- Runs on update; New in 2.5 -->
  		<schemas>
  			<schemapath type="mysql">sql/updates/mysql</schemapath>
  		</schemas>
  	</update>
    <files>
        <filename plugin="pagamastarde">pagamastarde.php</filename>
        <folder>language</folder>
        <folder>pagamastarde</folder>
        <folder>sql</folder>
    </files>
    <scriptfile>script.php</scriptfile>
    <vmconfig>
		<fields name="params">
            <fieldset name="payment" addfieldpath="/administrator/components/com_virtuemart/fields">
              <field type="vmtitle" default="VMPAYMENT_PAGAMASTARDE_SETUP_SECTION"
      					   description="VMPAYMENT_PAGAMASTARDE_SETUP_DESC"/>
			   <field name="pagamastarde_env" type="radio" scope="com_virtuemart" default="0" label="VMPAYMENT_PAGAMASTARDE_ENV" description="VMPAYMENT_PAGAMASTARDE_ENV">
					<option value="test">Test</option>
					<option value="real">Real</option>
			   </field>
			   <field name="pagamastarde_test_account" type="text" size="25" label="VMPAYMENT_PAGAMASTARDE_TEST_ACCOUNT" description="VMPAYMENT_PAGAMASTARDE_TEST_ACCOUNT_DESC"/>
			   <field name="pagamastarde_test_key" type="text" size="25" label="VMPAYMENT_PAGAMASTARDE_TEST_KEY" description="VMPAYMENT_PAGAMASTARDE_TEST_KEY_DESC"/>

         <field name="pagamastarde_real_account" type="text" size="25" label="VMPAYMENT_PAGAMASTARDE_REAL_ACCOUNT" description="VMPAYMENT_PAGAMASTARDE_REAL_ACCOUNT_DESC"/>
			   <field name="pagamastarde_real_key" type="text" size="25" label="VMPAYMENT_PAGAMASTARDE_REAL_KEY" description="VMPAYMENT_PAGAMASTARDE_REAL_KEY_DESC"/>
         <field name="pagamastarde_discount" type="radio" scope="com_virtuemart" default="0" label="VMPAYMENT_PAGAMASTARDE_DISCOUNT" description="VMPAYMENT_PAGAMASTARDE_DISCOUNT_DESC">
           <option value="false">False</option>
           <option value="true">True</option>
         </field>
         <field name="pagamastarde_eom" type="radio" scope="com_virtuemart" default="0" label="VMPAYMENT_PAGAMASTARDE_EOM" description="VMPAYMENT_PAGAMASTARDE_EOM_DESC">
           <option value="false">False</option>
           <option value="true">True</option>
         </field>

			</fieldset>
		</fields>
    </vmconfig>
    <!-- UPDATESERVER DEFINITION -->
  	<updateservers>
  		<!-- Note: No spaces or linebreaks allowed between the server tags -->
  		<server type="extension" priority="1" name="Pagamastarde">http://demoshop.pagamastarde.com/joomla/update.xml</server>
  	</updateservers>
</extension>
